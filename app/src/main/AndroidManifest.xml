<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gruppo3.wetravel">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.provider.Telephony.SMS_RECEIVED" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.NotSubscribedActivity"
            android:label="@string/title_activity_not_subscribed"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".activities.LauncherActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.FriendsActivity" />
        <activity
            android:name=".activities.Home"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar" />

        <service
            android:name=".InvitationService"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".activities.invActivity" />
        <activity
            android:name=".Invitation.Friends"
            android:label="@string/title_activity_friends"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Invitation.Invitation"
            android:label="@string/title_activity_invitations"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activities.SignUpActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".activities.MapActivity"
            android:label="@string/title_activity_maps" />
    </application>

</manifest>